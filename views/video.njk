{% extends "layout.njk" %}

{% block content %}

  {% block head %}
    <title>{{item.info}}</title>

  {% endblock %}

  <h1 class="title">{{item.info}}</h1>
  <section class="video">

    <div class="card" id="{{item.id}}">
      <div class="card-video">
        <iframe src="https://www.youtube.com/embed/{{item.id}}" frameborder="0"></iframe>
      </div>

      <div class="card-info">
        <p>{{item.info}}</p>
      </div>
    </div>

  </section>

{% endblock %}

<footer class="links">
  <p>
    <a href="https://github.com/Arlin-Mafra" target="_blank">GitHub</a>
  </p>
</footer>
</body>
</html>
